<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rocklobstre.causalarm">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <supports-screens
        android:smallScreens="false"
        android:xlargeScreens="false" />

    <application
        android:name="com.rocklobstre.causalarm.PostrainerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Postrainer"
        >
        <activity
            android:name="com.rocklobstre.causalarm.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Postrainer"
            />

        <activity
            android:name="com.rocklobstre.causalarm.alarmlist.AlarmListActivity"
            android:label="@string/app_name"
            android:theme="@style/Postrainer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.rocklobstre.causalarm.alarmreceiver.AlarmReceiverActivity"
            android:label="@string/title_activity_manage_alarm"
            android:theme="@style/Postrainer.Inverse" />

        <!-- AlarmDetail's Orientation locked to portait, due to several issues/crashes with styling
        TimePicker across version and orientation changes -->

        <activity android:name="com.rocklobstre.causalarm.alarmdetail.AlarmDetailActivity"
            android:theme="@style/Postrainer"

            android:screenOrientation="portrait"
            />

    </application>

</manifest>